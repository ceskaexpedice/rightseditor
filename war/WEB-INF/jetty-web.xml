<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure class="org.mortbay.jetty.webapp.WebAppContext">

  <New id="aplikator.structure" class="org.mortbay.jetty.plus.naming.EnvEntry">
    <Arg></Arg>
    <Arg>java:comp/env/aplikator.structure</Arg>
    <Arg type="java.lang.String">cz.incad.kramerius.rights.server.Structure</Arg>
    <Arg type="boolean">true</Arg>
  </New>
  
  <New id="aplikator.datasourceName" class="org.mortbay.jetty.plus.naming.EnvEntry">
    <Arg></Arg>
    <Arg>java:comp/env/aplikator.datasourceName</Arg>
    <Arg type="java.lang.String">java:comp/env/jdbc/kramerius4</Arg>
    <Arg type="boolean">true</Arg>
  </New>

  
  
  <New id="kramerius4" class="org.mortbay.jetty.plus.naming.Resource">
    <Arg></Arg>
    <Arg>java:comp/env/jdbc/kramerius4</Arg>
    <Arg>
     <New class="com.jolbox.bonecp.BoneCPDataSource">
                 <Set name="driverClass">org.postgresql.Driver</Set>
                 <Set name="jdbcUrl">jdbc:postgresql://localhost:5432/kramerius4</Set>
                 <Set name="username">fedoraAdmin</Set>
                 <Set name="password">fedoraAdmin</Set>
     </New>
    </Arg>
   </New>
   
   <Get name="securityHandler">
    <Set name="userRealm">
        <New class="org.mortbay.jetty.security.HashUserRealm">
         <Set name="name">protected</Set>
            <Set name="config"><SystemProperty name="jetty.home" default="."/>/etc/realm.properties</Set>
        </New>
    </Set>
  </Get>
   
</Configure>


